---
import type { Headline as Props } from '~/types';
import { twMerge } from 'tailwind-merge';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,

  textAlign,
  classes = {},
} = Astro.props;

const {
  container: containerClass,
  title: titleClass = 'text-3xl md:text-4xl text-primary',
  subtitle: subtitleClass = 'text-xl',
} = classes;
---

{
  (title || subtitle || tagline) && (
    <div class={twMerge(`mb-8 md:mb-12 ${textAlign === 'center' ? 'text-center' : ''}`, containerClass)}>
      {tagline && (
        <p class="text-base font-bold uppercase tracking-wide text-secondary dark:text-blue-200" set:html={tagline} />
      )}
      {title && (
        <h2
          class={twMerge('leading-tighter text-heading font-heading text-3xl font-bold tracking-tighter', titleClass)}
          set:html={title}
        />
      )}
      {subtitle && <p class={twMerge('mt-4 text-muted', subtitleClass)} set:html={subtitle} />}
    </div>
  )
}
