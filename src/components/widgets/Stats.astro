---
import type { Stats as Props } from '~/types';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import { Icon } from 'astro-icon/components';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  stats = [],

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  <div class="-m-4 flex flex-wrap justify-center text-center">
    {
      stats &&
        stats.map(({ amount, title, icon }) => (
          <div class="intersect-once intersect-quarter w-full min-w-[220px] border-[#cbd0d8] p-4 text-center sm:w-1/2 md:w-1/3 md:border-r md:last:border-none motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade dark:md:border-slate-500">
            {icon && (
              <div class="mx-auto mb-4 flex items-center justify-center text-primary">
                <Icon name={icon} class="h-10 w-10" />
              </div>
            )}
            {amount && (
              <div class="font-heading text-5xl font-semibold text-primary dark:text-white xl:text-6xl">{amount}</div>
            )}
            {title && <div class="mt-4 text-lg text-muted dark:text-slate-400">{title}</div>}
          </div>
        ))
    }
  </div>
</WidgetWrapper>
