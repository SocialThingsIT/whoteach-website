---
import { APP_BLOG } from 'astrowind:config';

import Grid from '~/components/blog/Grid.astro';

import { getBlogPermalink } from '~/utils/permalinks';
import { findLatestPosts } from '~/utils/blog';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Widget } from '~/types';
import Button from '~/components/ui/Button.astro';

export interface Props extends Widget {
  title?: string;
  linkText?: string;
  linkUrl?: string | URL;
  information?: string;
  count?: number;
}

const {
  title = await Astro.slots.render('title'),
  linkText = 'Mostra tutti gli articoli',
  linkUrl = getBlogPermalink(),
  information = await Astro.slots.render('information'),
  count = 4,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const posts = APP_BLOG.isEnabled ? await findLatestPosts({ count }) : [];
---

{
  APP_BLOG.isEnabled ? (
    <div class="bg-[#EBEBEB]">
      <WidgetWrapper id={id} isDark={true} containerClass={classes?.container as string} bg={bg}>
        <div class="flex flex-col lg:justify-between lg:flex-row mb-8">
          {title && (
            <div class="md:max-w-full w-full mb-4">
              <div class="flex justify-between items-center">
                <h2
                  class="text-3xl font-bold tracking-tight sm:text-4xl sm:leading-none group font-heading"
                  set:html={title}
                />
                {APP_BLOG.list.isEnabled && linkText && linkUrl && (
                  <a href={linkUrl} class="text-primary underline text-sm whitespace-nowrap ml-4">
                    {linkText} Â»
                  </a>
                )}
              </div>
            </div>
          )}

          {information && <p class="text-muted dark:text-slate-400 lg:text-sm lg:max-w-md" set:html={information} />}
        </div>

        <Grid posts={posts} />
      </WidgetWrapper>
    </div>
  ) : (
    <Fragment />
  )
}
