  <Quote
    quote="Tutti sono stati molto soddisfatti dalla piattaforma anche per l'eccellente supporto da parte del fornitore sia in fase di personalizzazione della piattaforma sia in fase operativa"
    author="Bruno"
    role="Consulente IT"
    rating={4.5}
    source="Fonte: Capterra"
    classes={{
      container: "md:pt-24 md:pb-8",
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-section dark:bg-transparent"></div>
    </Fragment>
  </Quote>

  <Stats
    stats={[
      { title: "Studenti che hanno già usato WhoTeach", amount: "100K+" },
      {
        title: "Valutazione della nostra assistenza clienti (fonte: Capterra)",
        amount: "4.5/5",
      },
      {
        title:
          "Risparmio medio sui costi per la creazione di materiali didattici",
        amount: "20%",
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-section dark:bg-transparent"></div>
    </Fragment>
  </Stats>

  <BlogLatestPosts id="blog" title="Il nostro blog">
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white dark:bg-transparent"></div>
    </Fragment>
